{
  "name": "chain-academy-v2",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Decentralized cryptocurrency and blockchain mentorship platform",
  "author": "Chain Academy Team",
  "license": "MIT",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "mentorship",
    "web3",
    "ethereum",
    "react",
    "typescript"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pm2 start ecosystem.config.js && pm2 logs --follow",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "contracts:compile": "hardhat compile",
    "contracts:test": "hardhat test",
    "contracts:test:gas": "REPORT_GAS=true hardhat test",
    "contracts:coverage": "hardhat coverage",
    "contracts:deploy": "hardhat ignition deploy ./ignition/modules",
    "contracts:deploy:local": "hardhat ignition deploy ./ignition/modules --network localhost",
    "contracts:deploy:sepolia": "hardhat ignition deploy ./ignition/modules --network sepolia",
    "contracts:verify": "hardhat verify",
    "contracts:node": "hardhat node",
    "foundry:build": "forge build",
    "foundry:test": "forge test -vvv",
    "foundry:test:gas": "forge test --gas-report",
    "foundry:coverage": "forge coverage",
    "foundry:coverage:report": "forge coverage --report lcov",
    "foundry:snapshot": "forge snapshot",
    "foundry:fmt": "forge fmt",
    "foundry:clean": "forge clean",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "clean": "rm -rf dist coverage node_modules/.vite",
    "postinstall": "playwright install"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@rainbow-me/rainbowkit": "^2.2.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.4",
    "viem": "^2.21.45",
    "wagmi": "^2.12.31"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.7",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@nomicfoundation/hardhat-viem": "^2.0.5",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^2.2.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.1",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "solidity-coverage": "^0.8.13",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "*.sol": [
      "forge fmt"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}