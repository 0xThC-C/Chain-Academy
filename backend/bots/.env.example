# Chain Academy V7 Bot Configuration
# Copy this file to .env and fill in the actual values

# =============================================================================
# CRITICAL: Bot Wallet Configuration
# =============================================================================
BOT_PRIVATE_KEY=your_bot_private_key_here_64_characters_no_0x_prefix

# =============================================================================
# V7 Contract Addresses (REQUIRED)
# =============================================================================
BASE_PROGRESSIVE_ESCROW_V7=0x0000000000000000000000000000000000000000
OPTIMISM_PROGRESSIVE_ESCROW_V7=0x0000000000000000000000000000000000000000
ARBITRUM_PROGRESSIVE_ESCROW_V7=0x0000000000000000000000000000000000000000
POLYGON_PROGRESSIVE_ESCROW_V7=0x0000000000000000000000000000000000000000

# =============================================================================
# RPC Endpoints (Optional - will use public RPCs if not specified)
# =============================================================================
BOT_BASE_RPC_URL=https://mainnet.base.org
BOT_OPTIMISM_RPC_URL=https://mainnet.optimism.io
BOT_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BOT_POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# Bot Operation Settings
# =============================================================================
BOT_NAME=ChainAcademy-PaymentBot-V7-Mainnet
BOT_VERSION=2.0.0
BOT_ENABLED=true
BOT_ENVIRONMENT=mainnet

# Scheduling
BOT_CHECK_INTERVAL=0 */6 * * *
BOT_DAILY_CHECK=0 2 * * *

# Payment Processing
BOT_PAYMENT_DELAY_HOURS=24
BOT_MAX_PAYMENTS_PER_RUN=50
BOT_MIN_PAYMENT_AMOUNT=1000000

# Gas Configuration
BOT_MAX_GAS_PRICE=50000000000
BOT_PRIORITY_FEE=2000000000

# Retry Logic
BOT_RETRY_ATTEMPTS=3
BOT_RETRY_DELAY=30000

# =============================================================================
# V7 Specific Settings
# =============================================================================
BOT_V7_SESSION_TRACKING_ENABLED=true
BOT_V7_HEARTBEAT_CHECK_ENABLED=false
BOT_V7_AUTOPAUSE_CHECK_ENABLED=false
BOT_V7_MIN_AUTO_RELEASE_DELAY=24
BOT_V7_SESSION_STORAGE_PATH=./data/session-tracker.json

# =============================================================================
# Monitoring & Notifications
# =============================================================================
BOT_ENABLE_NOTIFICATIONS=false
BOT_WEBHOOK_URL=
BOT_LOG_LEVEL=info

# Health Monitoring
BOT_HEALTH_CHECK_INTERVAL=300000
BOT_MAX_EXECUTION_TIME=1800000

# =============================================================================
# Emergency Controls
# =============================================================================
BOT_EMERGENCY_STOP=false
BOT_MAINTENANCE_MODE=false

# Security
BOT_ALLOWED_OPERATORS=
BOT_REQUIRE_OPERATOR_SIGNATURE=false

# =============================================================================
# Development/Testing
# =============================================================================
NODE_ENV=production