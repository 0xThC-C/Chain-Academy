{
  "name": "chain-academy-backend",
  "version": "1.0.0",
  "description": "Backend for Chain Academy V2 - Decentralized mentorship platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "start:bot": "ts-node bots/start-mainnet-bot.ts",
    "bot:scan": "ts-node bots/start-mainnet-bot.ts -- --scan",
    "bot:once": "ts-node bots/start-mainnet-bot.ts -- --once",
    "bot:immediate": "ts-node bots/start-mainnet-bot.ts -- --immediate",
    "bot:pm2": "pm2 start bots/start-mainnet-bot.ts --name payment-bot --interpreter ts-node",
    "bot:stop": "pm2 stop payment-bot",
    "bot:logs": "pm2 logs payment-bot",
    "bot:restart": "pm2 restart payment-bot",
    "bot:status": "pm2 describe payment-bot",
    "bot:v7:test": "ts-node bots/test-v7-bot.ts",
    "bot:v7:migrate": "ts-node bots/migrate-to-v7.ts",
    "bot:v7:migrate:dry": "ts-node bots/migrate-to-v7.ts -- --dry-run",
    "bot:v7:health": "ts-node -e \"import('./bots/DailyPaymentBot').then(m => { const bot = new m.DailyPaymentBot(require('./bots/MainnetBotConfig').MAINNET_BOT_CONFIG, require('./bots/MainnetBotConfig').MAINNET_CHAIN_CONFIGS); console.log('Bot Health:', bot.isHealthy()); console.log('Session Tracker:', bot.getSessionTrackerStatus()); })\"",
    "bot:compile": "tsc --noEmit --project bots/tsconfig.json",
    "bot:discord:test": "ts-node bots/test-discord-notifications.ts"
  },
  "keywords": [
    "blockchain",
    "mentorship",
    "web3",
    "ethereum"
  ],
  "author": "Chain Academy",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/socket.io": "^3.0.2",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.10",
    "pm2": "^5.3.0",
    "siwe": "^3.0.0",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.4"
  }
}
